{% comment %} 
    This section uses the raw liquid tag to set templates to be replaced using vinilla JavaScript, anything in the $[] will be replaced by the products details.

    The UI logic for this modal is stored in the assests/global.js starting on line 900. 
{% endcomment %}


<style>
    .modal {
        display: block; 
        position: fixed; 
        z-index: 20;
        left: 0;
        top: 0;
        width: 100%;
        height: 100vh; 
        overflow: auto;
        background-color: rgb(0,0,0); 
        background-color: rgba(0,0,0,0.4); 
    }


    .modal-content {
        background-color: #fefefe;
        margin: 4rem auto;
        border: 1px solid #888;
        width: 75%;
        padding: 1rem;
        display: flex;
        flex-direction: column;

    }

    .modal-content-product{
        width: 80%;
        max-height: 60%;
        height: 80%;
        margin: 4rem auto;
        display: flex;
        flex-direction: row;
        justify-content: center;

    }

    .modal-content-product img{
        width: 30rem;
        max-width: 45rem;
        max-height: 45rem;
        margin: 1rem;
    }


    .modal-content-product-details{
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin: 1rem 2rem;
        width: 40%;
    }

    .modal-content-product-details .modal_product_title{
        margin: 0;

    }

    .modal-content-product-details .modal_price{
        font-size: 2.25rem;
        font-weight: 700;
        padding: 0;
        margin: 0;
    }

    .modal-content button{
        background-color: transparent;
        border: solid 1px transparent;
        cursor: pointer;
        display: inline-block;
        align-self: end;
    }

    .modal-content button#close-modal {
        position: absolute;
    }

    .modal-content button:hover, 
    .modal-content button:focus {
        color: rgba(0,0,0,0.4);
        transition: color 0.5s;
    }



    .close-modal-button {
        width: 4rem;
        height: 4rem;
    }

    .AddToCart{
        overflow: hidden;
        position: relative;
    }

    .AddToCart .success{
        display: inline-block;
        opacity: 1;
        position: absolute;
        top: 7px;
        left: -70px;
    }

    .AddedToCartCheck{
        margin: 0;
        transform: translateX(200px);
        color: white;
        transition: transform 2s, opacity 1s;
    }

    .AddedToCartButton{
        background-color: black;
        transition: background-color 1s;
    }

    .AddedToCartText{
        display: none;
    }

    .checkmark {
        width: 3rem;
        height: 3rem;
    }

</style>



{% raw %}
<div id="modal" class="modal">
    <div  class="modal-content">
        <button onclick="closeModal()" id="close-modal">
            <svg xmlns="http://www.w3.org/2000/svg" class="close-modal-button" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
        <div class="modal-content-product">
            <img src=$[img_src] alt="A bottle of $[product_title]"  />
            <div class="modal-content-product-details">
                <h1 class="modal_product_title">$[product_title]</h1>
                <p class="modal_price">$[product_price]</p>
                $[product_description]
                <button 
                    onclick="addProductToCart($[product_id])" 
                    id="modal_add_button"
                    class="AddToCart product-form__submit button button--full-width button--secondary"
                >
                    <span id="successful_add" class="success">
                        <svg xmlns="http://www.w3.org/2000/svg" class="checkmark" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </span>
                    <p id="modal_button_text">Add to Cart</p>
                </button>
            </div>
        </div>
    </div>
</div>
{% endraw %}


