{% comment %}
    Renders a qucikview button overtop on a product card

    Accepts:
    - button_text: {String} Sets the text for the quickview button. default: "QuickView"

    Usage:
    {% render 'card-product', button_text: quickview_btn_text %}
{% endcomment %}

{{ 'component-quickview-button.css' | asset_url | stylesheet_tag }}

<div class="button-overlay"> 
    <button id="quickview" class="button button--primary" type="submit">{{ button_text }}</button>
</div>

